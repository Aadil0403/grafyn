<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude auto-generated client code -->
    <Match>
        <Package name="~.*\.client\..*"/>
    </Match>
    
    <!-- Exclude test files -->
    <Match>
        <Class name="~.*Test.*"/>
    </Match>
    
    <!-- Exclude specific SpotBugs rules that are too noisy -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>
    
    <!-- Exclude serialization warnings for DTOs -->
    <Match>
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
    </Match>
</FindBugsFilter>
